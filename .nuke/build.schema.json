{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "ApplicationDirectory": {
          "type": "string",
          "description": "Application directory against which buildpack will be applied"
        },
        "CfApiEndpoint": {
          "type": "string",
          "description": "Cloud Foundry Endpoint"
        },
        "CfOrg": {
          "type": "string",
          "description": "Cloud foundry org in which to deploy integration tests"
        },
        "CfPassword": {
          "type": "string",
          "description": "Cloud Foundry Password"
        },
        "CfSpace": {
          "type": "string",
          "description": "Cloud foundry space in which to deploy integration tests"
        },
        "CfUsername": {
          "type": "string",
          "description": "Cloud foundry username"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)"
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "GitHubToken": {
          "type": "string",
          "description": "GitHub personal access token with access to the repo"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "IntegrationTestKerbKdc": {
          "type": "string",
          "description": "KDC server used in integration tests"
        },
        "IntegrationTestKerbPassword": {
          "type": "string",
          "description": "Kerberos password used in integration tests"
        },
        "IntegrationTestKerbUser": {
          "type": "string",
          "description": "User principal used in integration tests"
        },
        "IntegrationTestSqlConnectionString": {
          "type": "string",
          "description": "SQL server connection string used in integration tests"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "CfLogin",
              "Clean",
              "DeploySampleApp",
              "Detect",
              "EnsureCfTarget",
              "InstallBuildpack",
              "Publish",
              "Release",
              "Restore",
              "SetCfTargetSpace",
              "Supply",
              "Test",
              "TestFull"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "CfLogin",
              "Clean",
              "DeploySampleApp",
              "Detect",
              "EnsureCfTarget",
              "InstallBuildpack",
              "Publish",
              "Release",
              "Restore",
              "SetCfTargetSpace",
              "Supply",
              "Test",
              "TestFull"
            ]
          }
        },
        "TestBuildpackName": {
          "type": "string",
          "description": "Name of the installed buildpack that is used for integration tests"
        },
        "UseCurrentCfLogin": {
          "type": "boolean",
          "description": "User current cf login"
        },
        "UseCurrentCfTarget": {
          "type": "boolean",
          "description": "User current cf target (org/space)"
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}